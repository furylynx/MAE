<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema targetNamespace="http://www.example.org/maeeventing"
	elementFormDefault="qualified" xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:maee="http://www.example.org/maeeventing"
	xmlns:laban="http://www.example.org/labanotation">

	<!-- THE ROOT ELEMENT -->
	<xsd:element name="message" type="maee:message" maxOccurs="1" minOccurs="1" />
	<xsd:complexType name="message">
	<xsd:sequence>
		<xsd:element name="timestamp" type="xsd:long" maxOccurs="1" minOccurs="1" />
		<xsd:choice>
			<xsd:complexType name="sequences">
				<xsd:sequence>
					<!-- Contains complete sequences -->
					<xsd:element name="score" type="laban:score" maxOccurs="unbound" minOccurs="0" />
				</xsd:sequence>
			</xsd:complexType>
			<xsd:complexType name="sequences">
				<xsd:sequence>
					<!-- Contains only the titles of the sequences -->
					<xsd:element name="title" type="xsd:string" maxOccurs="unbound" minOccurs="0" />
				</xsd:sequence>
			</xsd:complexType>
		</xsd:choice>
	</xsd:sequence>
